<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netcoreapp2.2</TargetFramework>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="coverlet.msbuild" Version="2.6.1"/>
        <PackageReference Include="ReportGenerator" Version="4.1.5"/>
        <PackageReference Include="Microsoft.AspNetCore.App" /> <!-- Solves versioning issues -->
        <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.1.1"/>
        <PackageReference Include="Moq" Version="4.11.0"/>
        <PackageReference Include="MSTest.TestAdapter" Version="1.4.0" />
        <PackageReference Include="MSTest.TestFramework" Version="1.4.0" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\src\TeamSpeak3.Metrics\TeamSpeak3.Metrics.csproj" />
    </ItemGroup>

    <ItemGroup>
        <EmbeddedResource Include="Resources\**\*.*"/>
        <None Remove="coverage\**"/>
        <None Remove="coverage.opencover.xml"/>
    </ItemGroup>

    <Target Name="Coverage">
        <ItemGroup>
            <CoverageFiles Include="coverage.opencover.xml"/>
        </ItemGroup>
        <ReportGenerator ReportFiles="@(CoverageFiles)" TargetDirectory="coverage" ReportTypes="Html" VerbosityLevel="Verbose"/>
    </Target>
</Project>