<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netcoreapp2.0</TargetFramework>
        <LangVersion>latest</LangVersion>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="2.2.0" />
        <PackageReference Include="Microsoft.Extensions.Options" Version="2.2.0" />
        <PackageReference Include="Telnet" Version="0.8.3" />
        <PackageReference Include="LiteGuard" Version="2.2.0" />
        <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0-beta2-18618-05" PrivateAssets="All" />
    </ItemGroup>

    <ItemGroup>
        <None Include="../../LICENSE" Pack="true" PackagePath="$(PackageLicenseFile)" />
    </ItemGroup>

    <PropertyGroup>
        <Product>TeamSpeak3.Metrics</Product>
        <Description>Exposes metrics from your Teamspeak 3 Server</Description>
        <Copyright>Copyright (c) prayzzz &amp; Contributors</Copyright>
    </PropertyGroup>

    <PropertyGroup>
        <Product>TeamSpeak3.Metrics</Product>
        <Title>$(Product)</Title>
        <Authors>prayzzz &amp; Contributors</Authors>
        
        <PackageDescription>$(Description)</PackageDescription>
        <PackageTags>TeamSpeak TeamSpeak3 TS3 Metrics</PackageTags>
        <PackageVersion>$(Version)</PackageVersion>
        <PackageProjectUrl>https://github.com/prayzzz/TeamSpeak3.Metrics</PackageProjectUrl>
        <PackageLicense>LICENSE</PackageLicense>
        <PackageOutputPath>../../nupkg</PackageOutputPath>
       
        <RepositoryUrl>https://github.com/prayzzz/TeamSpeak3.Metrics</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
    </PropertyGroup>

    <Target Name="PrintVersion" BeforeTargets="BeforeBuild">
        <Message Text="Building $(AssemblyName) version $(Version)" Importance="High" />
    </Target>

</Project>